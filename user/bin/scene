#!/bin/sh
# vim:fdm=marker
# screenshot utility

SCENE_SNAP_DIR="${HOME}/Pictures"
FORMAT="+%y-%m-%d_%H-%M-%S"

# utilities {{{

getOutputFile() {
  category="$1"
  ext="$2"

  dir="$SCENE_SNAP_DIR"
  mkdir -p "$dir"

  echo "${dir}/${category}-$(date "$FORMAT").${ext}"
}

copyToClipboard() {
  wl-copy < "$1"
}

# }}}

# functions {{{

crop() {
  out="$(getOutputFile "snap" "png")"
  grim -g "$(slurp)" "$out"
  copyToClipboard "$out"
}

snap() {
  out="$(getOutputFile "snap" "png")"
  grim "$out"
  copyToClipboard "$out"
}

togglekeys() {
  pid="/tmp/wshowkeys.pid"
  if [ -f "$pid" ]; then
    pkill wshowkeys
    rm "$pid"
  else 
    echo "running" >> "$pid"
    wshowkeys -b "#292E39" &
  fi
}

# }}}

case "$1" in
  "crop") crop ;;
  "snap") snap ;;
  "togglekeys") togglekeys ;;
  *) echo "USAGE: scene [crop | snap | togglekeys]" ;;
esac

